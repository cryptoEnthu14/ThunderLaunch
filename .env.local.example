# ThunderLaunch Environment Variables Example
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api

# Public Supabase URL (safe to expose to client)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Public Anon Key (safe to expose to client, has RLS protection)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Key (NEVER expose to client - server-side only, bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# SOLANA CONFIGURATION
# =============================================================================

# Network: 'devnet' | 'testnet' | 'mainnet-beta'
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# RPC Endpoint - Use custom RPC for better performance in production
# Devnet: https://api.devnet.solana.com
# Testnet: https://api.testnet.solana.com
# Mainnet: https://api.mainnet-beta.solana.com
# Or use services like QuickNode, Alchemy, Helius for better reliability
NEXT_PUBLIC_SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com

# Optional: WebSocket endpoint for real-time updates
NEXT_PUBLIC_SOLANA_WS_ENDPOINT=wss://api.devnet.solana.com

# Optional: Commitment level - 'processed' | 'confirmed' | 'finalized'
NEXT_PUBLIC_SOLANA_COMMITMENT=confirmed

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application URL (used for callbacks, sharing, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment: 'development' | 'staging' | 'production'
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# PLATFORM FEES & LIMITS
# =============================================================================

# Platform fee percentage (1.0 = 1%)
NEXT_PUBLIC_FEE_PERCENTAGE=1.0

# Minimum liquidity required in SOL
NEXT_PUBLIC_MIN_LIQUIDITY=1000

# Maximum token supply allowed
NEXT_PUBLIC_MAX_TOKEN_SUPPLY=1000000000

# Minimum token supply allowed
NEXT_PUBLIC_MIN_TOKEN_SUPPLY=1000

# Transaction fee in SOL (for gas estimation)
NEXT_PUBLIC_ESTIMATED_TX_FEE=0.001

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Fee receiver wallet address (receives platform fees)
NEXT_PUBLIC_FEE_WALLET_ADDRESS=your-fee-wallet-address-here

# Treasury wallet address (receives funds)
NEXT_PUBLIC_TREASURY_WALLET_ADDRESS=your-treasury-wallet-address-here

# =============================================================================
# OPTIONAL: THIRD-PARTY SERVICES
# =============================================================================

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# IPFS/Arweave for metadata storage (Optional)
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================

# Rate limit: requests per minute per IP
RATE_LIMIT_PER_MINUTE=100

# API Keys for server-side operations (Optional)
API_SECRET_KEY=your-secret-api-key-here

# JWT Secret for authentication tokens
JWT_SECRET=your-jwt-secret-here-min-32-chars

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_ENABLE_MAINNET=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_REFERRALS=false

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Skip wallet signature verification (dev only)
DEV_SKIP_SIGNATURE_VERIFICATION=false

# Mock Solana transactions (dev only)
DEV_MOCK_TRANSACTIONS=false

# Enable debug logging
DEBUG=false
NEXT_PUBLIC_DEBUG=false
